<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayPost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="1dp"
            card_view:cardBackgroundColor="#D4D4DF"
            android:layout_margin="20dp"
            card_view:cardElevation="20dp"
            android:outlineAmbientShadowColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is post title"
                    android:textColor="#F2110F0B"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="35dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F23A3529"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="50dp"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is post content..."
                    android:textColor="#F24D4747"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author: Aryan Garg"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#F24D4747"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/posted_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted On: 15 May, 5:45"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="#F24D4747"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/edited_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last edited on: 15 May, 5:45"
                    android:textColor="#F24D4747"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>